@{
  Layout = "_Layout";
}
@using ToDoList.Models;

<h1>Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
}

@foreach (Category category in Model)
{
  <h3>
    <a href='/categories/@category.Id'><button class="btn btn-info">@category.Name</button></a>
  </h3>
}

<p>
  <a href='/'><button class="btn btn-warning">Back home</button></a>
</p>